<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tag %>
  <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
              
  <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
  <%= stylesheet_link_tag 'blueprint/print',  :media => 'print' %>
  <!--[if lt IE 8]>
    <%= stylesheet_link_tag 'blueprint/ie', :media => 'screen' %>
  <![endif]-->
  <%= stylesheet_link_tag 'custom', :media => 'screen' %>
  <% if signed_in? && @user.uploader_option %>  
    <%= stylesheet_link_tag 'jquery-ui' %>
  <% end %>
  <%= stylesheet_link_tag 'jquery.fileupload-mini-ui', :media => 'screen' %>
  <%= javascript_include_tag 'jquery.min', 'jquery-ui.min',  'jquery.tmpl', 'rails',  'jquery.fileupload', 'jquery.fileupload-ui', 'jquery.iframe-transport', 'jquery.labelify', 'jquery.truncate.min', 'application' %>
</head>
<body>
	
  <div class="container">	
    <%= render 'layouts/header' %>
  </div>
    <section>
    <%= render 'application/side_bar' %>	
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>			

    <div class="container">	
      <table class="front" id="main_table" summary="For signed-in users">
        <tr>
          <td id="main_frame_td" class="main">
            <%= yield %>
          </td>
        </tr>
      </table>
	

    <%= debug(params) if Rails.env.development? %>
    </div>
    </section>	
</html>
